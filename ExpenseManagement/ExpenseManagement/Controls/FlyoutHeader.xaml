<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ExpenseManagement.Controls.FlyoutHeader"
             HeightRequest="200">
    <StackLayout VerticalOptions="Center" Spacing="0">
        <StackLayout x:Name="HeaderLayout" Orientation="Vertical" Margin="5,0,5,10">
            <Image Source="userImage.png" HeightRequest="70" WidthRequest="70" HorizontalOptions="Center"/>
            <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                <Grid>
                    <Label Text="{Binding FullName}" FontAttributes="Bold" FontSize="15" TextColor="White" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>
                </Grid>
            </StackLayout>
        </StackLayout>
    </StackLayout>
</ContentView>